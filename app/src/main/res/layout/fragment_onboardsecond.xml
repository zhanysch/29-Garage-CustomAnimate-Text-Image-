<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagetwo"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/image_secondpage"
        android:scaleType="centerCrop"
        android:layout_width="360dp"
        android:layout_height="370dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="66dp"
        android:layout_marginTop="29dp"/>

    <TextView
        android:id="@+id/title_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imagetwo"
        app:layout_constraintVertical_bias="0.19"
        android:textColor="@color/dark"
        android:layout_marginStart="70dp"
        android:lineSpacingExtra="7sp"
        android:fontFamily="@font/font_friends"
        android:gravity="center"
        android:layout_marginEnd="78dp"
        android:text="@string/word_pagetwo"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/imagetwo" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Меня зовут"
        android:textColor="@color/dark"
        android:textSize="18sp"
        android:fontFamily="@font/font_friends"
        android:lineSpacingExtra="7sp"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="143dp"
        app:layout_constraintVertical_bias="0.79"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_desc"
        android:layout_marginTop="150dp"/>

    <EditText
        android:id="@+id/editName"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:lineSpacingExtra="7sp"
        android:layout_width="wrap_content"
        android:layout_marginStart="152dp"
        android:fontFamily="@font/font_friends"
        android:text="МАША"
        android:textColor="@color/dark"
        android:layout_marginEnd="153dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:src="@drawable/ic_line"
        app:layout_constraintTop_toBottomOf="@id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>